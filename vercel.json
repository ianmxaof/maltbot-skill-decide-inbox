{
  "crons": [
    {
      "path": "/api/moltbook/heartbeat",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/network/cron?scope=fast",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/network/cron?scope=heavy",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/digest/email?all=1",
      "schedule": "0 8 * * *"
    }
  ]
}

# ─── The Nightly Build Worker — Configuration ───────────────
# Copy to .env and fill in your values.

# Platform connection
PLATFORM_URL=http://localhost:3000
PLATFORM_API_KEY=                    # optional, for authenticated endpoints

# Identity
PAIR_ID=pair_001                     # your human-agent pair ID (from onboarding)
WORKER_NAME=cr-v-golem               # human-friendly worker name
WORKER_ASPECT=golem                  # golem | prometheus | odin | hermes | custom

# Ollama
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b             # which model to use for evaluation

# Processing
BATCH_SIZE=5                         # items per Ollama call
COOLDOWN_MS=5000                     # delay between batches
MAX_TOKENS=2048                      # Ollama max tokens per call
TEMPERATURE=0.3                      # lower = more focused evaluation

# Heartbeat
HEARTBEAT_INTERVAL_MS=60000          # how often to ping the platform (1 min)

# Watchers (comma-separated RSS feed URLs to monitor)
RSS_FEEDS=https://hnrss.org/newest?points=50,https://www.reddit.com/r/LocalLLaMA/.rss
RSS_INTERVAL_MS=300000               # check every 5 min

# GitHub repos to watch (owner/repo format, comma-separated)
GITHUB_REPOS=
GITHUB_INTERVAL_MS=600000            # check every 10 min
GITHUB_TOKEN=                        # optional, for higher rate limits

# Keywords (comma-separated)
KEYWORDS=ai agents,local models,ollama,openclaw,mcp
EXCLUDE_KEYWORDS=
MIN_RELEVANCE=0.5                    # 0-1, threshold for surfacing items
